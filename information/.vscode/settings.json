{
  "files.autoSave": "onFocusChange",
  "editor.minimap.enabled": true,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "[markdown]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": false
    }
  },
  "files.defaultLanguage": "markdown",
  "files.exclude": {
    "**/node_modules": true,
    "_site/**": true
  },
  "files.watcherExclude": {
    "**/node_modules": true
  },
  "foam.edit.linkReferenceDefinitions": "withExtensions",
  "foam.logging.level": "debug",
  "foam.openDiaryNote.directory": "${projectRoot}/information/diary", // a relative directory path will get appended to the workspace root. An absolute directory path will be used unmodified.
  "foam.openDiaryNote.filenameFormat": "'daily-diary'-yyyy-mm-dd",
  "foam.openDiaryNote.fileExtension": "md",
  "foam.openDiaryNote.titleFormat": "'Journal Entry, ' dddd, mmmm d",
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "markdown.preview.breaks": true,
  "pasteImage.path": "${projectRoot}/information/attachments",
  "pasteImage.showFilePathConfirmInputBox": true,
  "prettier.singleQuote": false,
  "spellright.notificationClass": "warning",
  "vscodeMarkdownNotes.noteCompletionConvention": "noExtension",
  "vscodeMarkdownNotes.slugifyMethod": "github-slugger",
  "files.insertFinalNewline": true,
  "markdown.styles": [".vscode/custom-tag-style.css"]
}
